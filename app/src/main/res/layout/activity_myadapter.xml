<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:gravity="center_horizontal"
          android:background="@drawable/dialogback"
          android:orientation="vertical">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="You can publish and cancel published result from here!" />

        <Button
            android:id="@+id/publishresult"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/textView14"
            android:background="@drawable/btn_back"
            android:text="Publish Result" />

        <Button
            android:id="@+id/cancelresult"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/publishresult"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_back"
            android:text="Cancel Published Result" />

      </LinearLayout>

</RelativeLayout>